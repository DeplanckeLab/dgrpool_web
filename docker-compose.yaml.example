version: '3'

services:

  website:
    build:
      context: .
      dockerfile: Dockerfile
    ports:
      - "3000:3000"
    env_file: .env
    volumes:
      - ./src/:/opt/dgrpool
      - ./data/:/data/dgrpool
   
  postgres:
    image: postgres:15.4
    env_file: .env
    volumes:
      - ./postgres-data/:/var/lib/postgresql/data
      - ./startdb/:/docker-entrypoint-initdb.d
volumes:
  postgres-data:
