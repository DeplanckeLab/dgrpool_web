<p style="color: green"><%= notice %></p>

<%= render @study %>

<div class='nowrap'>
  <% if curator? %>
  <%= link_to "Edit this study", edit_study_path(@study), :class => 'btn btn-success', :data => {:turbo => 'false', :method => 'get'} %>
  <% end %>
  <%= link_to "Back to studies", studies_path, :class => 'btn btn-secondary', :data => {:turbo => false} %>
  <% if admin? %>
  <%= button_to "Destroy", study_path(@study), {:data => {:confirm => 'Are you sure?', :turbo => false}, :method => :delete, :class => 'btn btn-danger'} %>
  <% end %>
  
</div>
