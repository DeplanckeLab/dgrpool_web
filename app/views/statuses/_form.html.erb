<%= form_with(model: status) do |form| %>
  <% if status.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(status.errors.count, "error") %> prohibited this status from being saved:</h2>

      <ul>
        <% status.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= label_tag "Name", nil,  {:class => 'col-sm-2 col-form-label'} %>
    <div class="col-sm-10">
      <%= form.text_field :name, {:class => 'form-control'} %>
    </div>
  </div>
 
  <div class="form-group row">
    <%= label_tag "Label", nil,  {:class => 'col-sm-2 col-form-label'} %>
    <div class="col-sm-10">
      <%= form.text_field :label, {:class => 'form-control'} %>
    </div>
  </div>
  
  <div class="form-group row">
    <%= label_tag "CSS class", nil,  {:class => 'col-sm-2 col-form-label'} %>
    <div class="col-sm-10">
      <%= form.text_field :css_class, {:class => 'form-control'} %>
    </div>
  </div>
  
  <div>
    <%= form.submit %>
  </div>
<% end %>
