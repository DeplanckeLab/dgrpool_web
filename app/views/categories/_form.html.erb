<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

   <div class="form-group row">
    <%= label_tag "Name", nil,  {:class => 'col-sm-2 col-form-label'} %>
    <div class="col-sm-10">
      <%= form.text_field :name, {:class => 'form-control'} %>
    </div>
  </div>

   <div class="form-group row">
    <%= label_tag "Description", nil,  {:class => 'col-sm-2 col-form-label'} %>
    <div class="col-sm-10">
      <%= form.text_area :description, {:rows => 10, :class => 'form-control'} %>
    </div>
  </div>

  <div class="form-group row">
    <%= label_tag "Num", nil,  {:class => 'col-sm-2 col-form-label'} %>
    <div class="col-sm-10">
      <%= form.text_field :num, {:class => 'form-control'} %>
    </div>
  </div>
   
  <div>
    <%= form.submit %>
  </div>
<% end %>
