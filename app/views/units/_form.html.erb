<%= form_with(model: unit) do |form| %>
  <% if unit.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(unit.errors.count, "error") %> prohibited this unit from being saved:</h2>

      <ul>
        <% unit.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 <div class="form-group row">
    <%= label_tag "Label - plain format", nil,  {:class => 'col-sm-2 col-form-label'} %>
    <div class="col-sm-10">
      <%= form.text_field :label, {:class => 'form-control'} %>
    </div>
  </div>
 
 <div class="form-group row">
   <%= label_tag "Label - HTML format", nil,  {:class => 'col-sm-2 col-form-label'} %>
    <div class="col-sm-10">
      <%= form.text_field :label_html, {:class => 'form-control'} %>
    </div>
  </div>

  
  <div>
    <%= form.submit %>
  </div>
<% end %>
