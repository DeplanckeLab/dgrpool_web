[Unit]
Description=Ruby-on-rails Server
After=syslog.target network.target remote-fs.target nss-lookup.target

[Service]
Type=simple
User=fdavid
Group=fdavid
WorkingDirectory=[DGRPOOL_DIR]
ExecStart=/usr/bin/podman-compose up -d
KillSignal=SIGINT
Restart=always

[Install]
